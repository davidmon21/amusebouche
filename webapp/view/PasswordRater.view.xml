<mvc:View
    controllerName="zapfi.project2.controller.PasswordRater"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:form="sap.ui.layout.form"
    displayBlock="true"
    xmlns="sap.m"
>
                <Page id="passwordRatingPage" navButtonPress=".onNavPress" showNavButton="true" title="Rate a Password">
                    <Input type="Password" liveChange="handleLiveChange" />
                  	<Label text="Password Rating" labelFor="PasswordRating"/>
		                <RatingIndicator id="PasswordRating" maxValue="3" class="sapUiSmallMarginBottom" value="{localData>/PasswordRating}"/>
                </Page>
</mvc:View>
